# PostgreSQL Database Environment Variables
# Copy this file to .env and update with your actual values

# Database Connection
DATABASE_URL=postgresql://enviafolha_user:secure_password@localhost:5432/enviafolha_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enviafolha_db
DB_USER=enviafolha_user
DB_PASSWORD=secure_password

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=30

# Evolution API Configuration
EVOLUTION_SERVER_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your-api-key
EVOLUTION_INSTANCE_NAME=your-instance

# File Upload Settings
MAX_FILE_SIZE=26214400
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
SENT_DIR=enviados

# WhatsApp Settings
WHATSAPP_DELAY_MIN=20
WHATSAPP_DELAY_MAX=40

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@empresa.com
ADMIN_PASSWORD=change-this-password
ADMIN_FULL_NAME=Administrador do Sistema